# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Hugging Face Hub
HF_TOKEN=your_huggingface_token_here
HF_HOME=/Users/your_username/.cache/huggingface

# Model Configuration
DEFAULT_MODEL=meta-llama/Llama-2-7b-hf
DEVICE=mps
MAX_LENGTH=512
BATCH_SIZE=8
PRECISION=float16

# Training Configuration
LEARNING_RATE=2e-5
NUM_EPOCHS=3
WARMUP_STEPS=500
WEIGHT_DECAY=0.01
LOGGING_STEPS=100
SAVE_STEPS=1000
EVAL_STEPS=500
OUTPUT_DIR=./outputs

# Data Configuration
DATA_DIR=./data
DATASET_NAME=
MAX_SAMPLES=

# API Configuration (optional)
API_HOST=0.0.0.0
API_PORT=8000

# Performance
NUM_WORKERS=4
